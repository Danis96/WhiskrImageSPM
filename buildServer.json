{
    "name": "WhiskrImageSPM",
    "buildRoot": "${workspaceRoot}/.build",
    "indexRoot": "${workspaceRoot}/.build/index",
    "swiftpmFlags": [],
    "settings": {
        "swift": {
            "sourcekit-lsp": {
                "diagnostics": {
                    "enabled": true,
                    "buildAfterChanges": true,
                    "showInlineErrors": true
                },
                "indexing": {
                    "enabled": true
                },
                "completion": {
                    "enabled": true,
                    "maxResults": 100,
                    "includeExactMatch": true,
                    "addBrackets": true
                },
                "syntaxHighlighting": {
                    "enabled": true
                },
                "watchedFiles": {
                    "enabled": true,
                    "pollTime": 500
                }
            }
        }
    }
}